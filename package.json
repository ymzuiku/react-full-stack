{
  "name": "react-full-stack",
  "version": "0.0.1",
  "description": "Isomorphic: Next.js and Koa Server Separate",
  "main": "shipitfile.js",
  "scripts": {
    "build": "cd client && next build",
    "web": "cd client && node client.js",
    "server": "pm2 flush && pm2 delete fs-server || echo && cd server && pm2 start server.js --name=fs-server || echo && pm2 log",
    "start": "yarn stop && cd client && pm2 start client.js --name=fs-client || echo && cd ../ && pm2 start server/server.js --watch --name=fs-server || echo && open http://127.0.0.1:4001 && pm2 log",
    "stop": "pm2 flush && pm2 delete fs-client || echo && pm2 deleta fs-server || echo ",
    "lint-client": "node_modules/.bin/eslint 'client/**/*.js' --cache --cache-location '.node_modules/.cache/.eslint_cache/'",
    "lint-server": "node_modules/.bin/eslint 'server/**/*.js' --cache --cache-location '.node_modules/.cache/.eslint_cache/'",
    "deploy": "shipit dev deploy",
    "push": "git add . || echo && git commit -m 'shipit post' || echo && git push || echo && yarn deploy",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@zeit/next-less": "^0.3.0",
    "axios": "^0.18.0",
    "history": "^4.7.2",
    "immutable": "^3.8.2",
    "less": "^3.8.1",
    "lodash": "^4.17.11",
    "next": "^6.1.2",
    "postcss-flexbugs-fixes": "^4.1.0",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "react-redux": "^5.0.7",
    "react-spring": "^5.7.2",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@koa/cors": "^2.2.2",
    "eslint": "^5.6.0",
    "eslint-plugin-react": "^7.11.1",
    "fs-extra": "^7.0.0",
    "jsonwebtoken": "^8.3.0",
    "koa": "^2.5.3",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-helmet": "^4.0.0",
    "koa-jwt": "^3.5.1",
    "koa-router": "^7.4.0",
    "mockjs": "^1.0.1-beta3",
    "mysql2": "^1.6.1",
    "sequelize": "^4.38.1",
    "shipit-cli": "^4.1.1",
    "shipit-deploy": "^4.1.1"
  },
  "pre-commit": [
    "lint-client",
    "lint-server"
  ]
}
